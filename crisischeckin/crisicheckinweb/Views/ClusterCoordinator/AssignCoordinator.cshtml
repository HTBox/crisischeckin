@model crisicheckinweb.ViewModels.DisasterClusterCoordinatorsViewModel

<table cellpadding="0" cellspacing="0" class="table table-bordered table-striped">
    <tr class="ht-header">
        <th>Cluster</th>
        <th>Coordinator(s)</th>
    </tr>
    @foreach (var cluster in Model.Clusters)
    {
        <tr>
            <td>@cluster.Name</td>
            <td>
                @foreach (var coordinator in cluster.Coordinators)
                {
                    <div class="cluster-coordinator">
                        @coordinator.Name
                        <a class="close glyphicon glyphicon-remove" href="@Url.Action("ConfirmUnassignCoordinator", new {id=@coordinator.Id, disasterId=@Model.DisasterId})"></a>
                    </div>
                }
            </td>
        </tr>
    }
</table>
