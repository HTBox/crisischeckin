<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25dp"
    android:minHeight="25dp"
    android:layout_margin="4dp">
    <TextView
        android:text="Disaster Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/disasterName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp"
        style="@style/ScreenTitle" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/disasterName"
        android:id="@+id/iAm"
        android:text="@string/IAm"
        android:paddingRight="5dp"
        style="@style/LabelText" />
    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iAm"
        android:id="@+id/status"
        android:layout_below="@id/disasterName"
        android:layout_alignBottom="@id/iAm"
        android:layout_alignBaseline="@id/iAm" />
</RelativeLayout>