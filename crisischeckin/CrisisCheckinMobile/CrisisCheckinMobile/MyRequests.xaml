<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrisisCheckinMobile.MyRequests"
              xmlns:local="clr-namespace:CrisisCheckinMobile;assembly=CrisisCheckinMobile">
  <StackLayout>
    <ListView x:Name="listViewRequests" RowHeight="60">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout VerticalOptions="Fill">
              <Label Text = "{Binding Description}" Margin="10" FontSize="24" AbsoluteLayout.LayoutBounds="0.25, 0.25, 400, 40"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>



</ContentPage>